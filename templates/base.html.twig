    <link href="https://raw.githubusercontent.com/harissonola/my-cdn/main/assets/vendor/css/theme-default.css" rel="stylesheet" />
    <link href="https://raw.githubusercontent.com/harissonola/my-cdn/main/assets/css/demo.css" rel="stylesheet" />

    <!-- CSS personnalisé pour adapter Sneat au mode sombre inspiré de Bootstrap -->
    <style>
      /* Appliquer un fond sombre et texte clair sur l'ensemble */
      body, .card, .navbar, .dropdown-menu, .modal-content {
        background-color: #121212 !important;
        color: #e0e0e0 !important;
        border-color: #1f1f1f !important;
      }
      /* Liens et éléments de navigation */
      a, .nav-link {
        color: #90caf9 !important;
      }
      a:hover, .nav-link:hover {
        color: #bbdefb !important;
      }
      /* Ajustements supplémentaires si nécessaire */
    </style>
  </head>

  <!-- Activation du mode sombre Bootstrap via data-bs-theme et classes bg-dark/text-light -->
  <body class="bg-dark text-light" data-bs-theme="dark">
    {% if app.current_route != 'app_login' and app.current_route != 'app_register' %}
      {% include '_partials/_nav.html.twig' %}
    {% endif %}

    {% include '_partials/_flash.html.twig' %}

    {% block body %}{% endblock %}

    <!-- LOADER PERSONNALISÉ (SPINNER) -->
    <div id="custom-spinner" class="spinner hidden">
      <div class="spinner-circle"></div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
      $(document).ready(function () {
        AOS.init();
      });
    </script>
    <script src="//code.tidio.co/1ke8d6pi5gzmnbfqlibfj63nxob1djzm.js" async></script>

    <!-- Gestion du spinner avec Turbo -->
    <script type="module">
      import { setProgressBarDelay } from '@hotwired/turbo';
      setProgressBarDelay(999999);
      document.addEventListener('turbo:visit', () => {
        const spinner = document.getElementById('custom-spinner');
        if (spinner) spinner.classList.remove('hidden');
      });
      document.addEventListener('turbo:load', () => {
        const spinner = document.getElementById('custom-spinner');
        if (spinner) spinner.classList.add('hidden');
      });
    </script>

    <style>
      /* Styles pour le loader (spinner) */
      .spinner {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
      }
      .spinner.hidden {
        display: none;
      }
      .spinner-circle {
        width: 50px;
        height: 50px;
        border: 6px solid #eee;
        border-top-color: #6366f1;
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }
      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
  </body>
</html>