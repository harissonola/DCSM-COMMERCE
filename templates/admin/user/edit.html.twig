{% extends 'admin.html.twig' %}

{% block title %}Modifier Utilisateur - {{ user.username }}{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Modifier Utilisateur</h5>
        <a href="{{ path('admin_user_index') }}" class="btn btn-label-secondary">
            <i class="mdi mdi-arrow-left me-1"></i> Retour
        </a>
    </div>
    <div class="card-body">
        {% include 'admin/user/_form.html.twig' with {'button_label': 'Mettre à jour'} %}
        
        {% if not user.isVerified %}
            <div class="alert alert-warning mt-4">
                <i class="mdi mdi-alert-circle-outline me-2"></i>
                Cet utilisateur n'a pas encore vérifié son email
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}