{% extends 'base.html.twig' %}

{% block title %}Instructions de dépôt{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Vérifier si les données sont présentes
            if (!document.getElementById('depositAddress') || !document.getElementById('depositAddress').value) {
                alert('Erreur: Les informations de dépôt sont incomplètes');
                window.location.href = '{{ path('app_profile') }}';
                return;
            }

            // Récupérer ou initialiser le timer dans le localStorage
            let expiresAt;
            const storedExpiresAt = localStorage.getItem('depositExpiresAt');
            
            if (storedExpiresAt) {
                expiresAt = new Date(parseInt(storedExpiresAt));
            } else {
                expiresAt = new Date('{{ expiresAt|date('Y-m-d H:i:s') }}').getTime();
                localStorage.setItem('depositExpiresAt', expiresAt);
            }
            
            function updateTimer() {
                const now = new Date().getTime();
                const distance = expiresAt - now;
                
                if (distance < 0) {
                    document.getElementById('timer').innerHTML = "<span class='text-danger'>EXPIRÉ</span>";
                    document.getElementById('timer-badge').classList.remove('bg-gradient-primary');
                    document.getElementById('timer-badge').classList.add('bg-danger');
                    return;
                }
                
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                document.getElementById('timer').innerHTML = 
                    `<span class="countdown-number">${hours}</span><span class="countdown-separator">h</span> 
                    <span class="countdown-number">${minutes}</span><span class="countdown-separator">m</span> 
                    <span class="countdown-number">${seconds}</span><span class="countdown-separator">s</span>`;
            }
            
            updateTimer();
            const timerInterval = setInterval(updateTimer, 1000);

            // Vérification automatique du statut
            setInterval(function() {
                fetch('{{ path('app_check_crypto_deposit', {'id': transaction.id}) }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `_token={{ csrf_token('crypto_deposit') }}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'completed') {
                        localStorage.removeItem('depositExpiresAt');
                        window.location.href = '{{ path('app_profile') }}?deposit=success';
                    } else if (data.status === 'expired') {
                        localStorage.removeItem('depositExpiresAt');
                        window.location.reload();
                    }
                })
                .catch(error => console.error('Error:', error));
            }, 30000); // Toutes les 30 secondes

            // Nettoyage du localStorage si l'utilisateur quitte la page
            window.addEventListener('beforeunload', function() {
                if (document.getElementById('timer').textContent.includes("EXPIRÉ")) {
                    localStorage.removeItem('depositExpiresAt');
                }
            });
        });

        function copyToClipboard(elementId) {
            const copyText = document.getElementById(elementId);
            copyText.select();
            document.execCommand("copy");
            
            const toast = new bootstrap.Toast(document.getElementById('copyToast'));
            toast.show();
        }
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
