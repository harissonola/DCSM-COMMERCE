{% extends 'admin.html.twig' %}

{% block title %}Détails Produit - {{ product.name }}{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Détails du produit</h5>
        <div>
            <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-warning me-2">
                <i class="mdi mdi-pencil"></i> Modifier
            </a>
            <a href="{{ path('admin_product_index') }}" class="btn btn-label-secondary">
                <i class="mdi mdi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tr>
                        <th>ID</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.price|format_currency('USD') }}</td>
                    </tr>
                    <tr>
                        <th>Boutique</th>
                        <td>{{ product.shop ? product.shop.name : 'Aucune' }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                {% if product.Image %}
                    <img src="{{ product.Image }}" alt="{{ product.name }}" class="img-fluid rounded mb-3">
                {% endif %}
                <h6>Description</h6>
                <p>{{ product.description ?? 'Aucune description' }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}