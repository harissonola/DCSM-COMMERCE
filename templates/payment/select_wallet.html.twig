{% extends 'base.html.twig' %}

{% block title %}Sélection du portefeuille{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .wallet-container {
            max-width: 600px;
            margin: 2rem auto;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .wallet-option {
            display: flex;
            align-items: center;
            padding: 1rem;
            margin-bottom: 1rem;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 0.75rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .wallet-option:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }
        
        .wallet-option input[type="radio"] {
            margin-right: 1rem;
        }
        
        .wallet-icon {
            width: 40px;
            height: 40px;
            margin-right: 1rem;
            object-fit: contain;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wallet-container">
    <h2 class="text-center mb-4">Sélectionnez votre portefeuille</h2>
    
    <form action="{{ path('app_process_crypto_deposit', {'id': transaction.id}) }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('select_wallet') }}">
        
        <div class="mb-4">
            {% for key, label in supportedCryptos %}
                <label class="wallet-option">
                    <input type="radio" name="crypto_type" value="{{ key }}" required>
                    <img src="{{ asset('img/crypto/' ~ key|lower ~ '.png') }}" alt="{{ label }}" class="wallet-icon" onerror="this.src='{{ asset('img/crypto/default.png') }}'">
                    <div>
                        <h5 class="mb-0">{{ label }}</h5>
                        <small class="text-muted">Frais: 0%</small>
                    </div>
                </label>
            {% endfor %}
        </div>
        
        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Continuer</button>
        </div>
    </form>
</div>
{% endblock %}