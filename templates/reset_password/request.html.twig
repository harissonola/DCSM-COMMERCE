{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<div class="container pt-5 mt-5">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Réinitialiser votre mot de passe</h4>
				<p class="card-text text-muted">Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

				{% for flash_error in app.flashes('reset_password_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}

				<button class="btn btn-primary w-100 mt-3 mb-3">Envoyer</button>
				{{ form_end(requestForm) }}

				<div class="row justify-content-center align-items-center">
					<a href="{{ path('app_login') }}" class=" text-decoration-none"><i class="fas fa-angle-left"></i> Retour</a>
				</div>

			</div>
		</div>
	</div>


{% endblock %}
