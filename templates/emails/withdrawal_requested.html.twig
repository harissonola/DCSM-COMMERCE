{% extends 'emails/base_email.html.twig' %}

{% block content %}
    <div style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; max-width: 600px; margin: 0 auto; color: #333;">
        <!-- En-tête avec logo -->
        <div style="text-align: center; padding: 20px 0; border-bottom: 1px solid #eee;">
            <img src="https://raw.githubusercontent.com/harissonola/my-cdn/main/img/bactrary-logo.png" alt="Bictrary Logo" style="max-height: 60px;">
            <h1 style="color: #2c3e50; margin-top: 20px;">Confirmation de votre demande de retrait</h1>
        </div>

        <!-- Contenu principal -->
        <div style="padding: 30px;">
            <p style="font-size: 16px;">Bonjour,</p>
            
            <p style="font-size: 16px; line-height: 1.6;">Nous avons bien reçu votre demande de retrait. Voici les détails de votre transaction :</p>
            
            <!-- Carte de détails -->
            <div style="background: #f8f9fa; border-radius: 8px; padding: 20px; margin: 25px 0; border-left: 4px solid #3498db;">
                <h3 style="color: #2c3e50; margin-top: 0;">Résumé du retrait</h3>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                    <span style="font-weight: bold;">Montant :</span>
                    <span>{{ amount|number_format(2) }} USD</span>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 10px; color: #e74c3c;">
                    <span style="font-weight: bold;">Frais :</span>
                    <span>- {{ fees|number_format(2) }} USD</span>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 10px; font-weight: bold;">
                    <span>Total débité :</span>
                    <span>{{ total_amount|number_format(2) }} USD</span>
                </div>
                
                <hr style="border: none; border-top: 1px dashed #ddd; margin: 15px 0;">
                
                <div style="margin-bottom: 8px;">
                    <span style="font-weight: bold;">Cryptomonnaie :</span>
                    <span style="background: #ecf0f1; padding: 3px 8px; border-radius: 4px; margin-left: 10px;">{{ currency|upper }}</span>
                </div>
                
                <div style="margin-bottom: 8px;">
                    <span style="font-weight: bold;">Adresse de destination :</span>
                    <div style="background: #f1f1f1; padding: 8px; border-radius: 4px; margin-top: 5px; word-break: break-all; font-family: monospace;">
                        {{ address }}
                    </div>
                </div>
                
                <div style="margin-top: 15px; color: #7f8c8d; font-size: 14px;">
                    <span style="font-weight: bold;">Date :</span>
                    {{ date|date('d/m/Y à H:i') }}
                </div>
            </div>
            
            <!-- Statut -->
            <div style="background: #e8f4fd; color: #2c3e50; padding: 15px; border-radius: 8px; text-align: center; margin: 20px 0;">
                <p style="margin: 0; font-weight: bold;">
                    <span style="color: #3498db;">●</span> Statut : En cours de traitement
                </p>
                <p style="margin: 10px 0 0; font-size: 14px;">
                    Vous recevrez une notification une fois le retrait complété.
                </p>
            </div>
            
            <!-- Message de sécurité -->
            <div style="background: #fff8e1; border-left: 4px solid #ffc107; padding: 15px; margin: 25px 0; border-radius: 0 8px 8px 0;">
                <h4 style="margin-top: 0; color: #ff9800;">⚠️ Important</h4>
                <p style="margin-bottom: 0; font-size: 14px;">
                    Si vous n'avez pas effectué cette demande, veuillez 
                    <a href="mailto:support@bictrary.com" style="color: #3498db; text-decoration: none;">contacter notre support</a> 
                    immédiatement.
                </p>
            </div>
            
            <!-- Bouton CTA -->
            <div style="text-align: center; margin: 30px 0;">
                <a href="{{ absolute_url(path('app_profile')) }}" style="background-color: #3498db; color: white; padding: 12px 24px; text-decoration: none; border-radius: 4px; font-weight: bold; display: inline-block;">
                    Voir mes transactions
                </a>
            </div>
            
            <!-- Signature -->
            <p style="font-size: 16px;">Cordialement,</p>
            <p style="font-size: 16px; font-weight: bold; color: #2c3e50;">L'équipe Bictrary</p>
        </div>

        <!-- Pied de page -->
        <div style="text-align: center; padding: 20px; background: #f8f9fa; color: #7f8c8d; font-size: 12px; border-top: 1px solid #eee;">
            <p style="margin: 5px 0;">© {{ "now"|date("Y") }} Bictrary. Tous droits réservés.</p>
            <p style="margin: 5px 0;">
                <a href="{{ absolute_url(path('app_conditions')) }}" style="color: #7f8c8d; text-decoration: none; margin: 0 10px;">Conditions d'utilisation</a>
                <a href="{{ absolute_url(path('app_confidentialite')) }}" style="color: #7f8c8d; text-decoration: none; margin: 0 10px;">Politique de confidentialité</a>
            </p>
        </div>
    </div>
{% endblock %}