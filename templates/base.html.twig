        <meta name="keywords" content="dcsm-commerce, dcsm, commerce, kristel, DCSM-COMMERCE, dcsm commerce, investissement, plateforme investissement, site investissement"/>
        <meta name="cryptomus" content="9d277104"/>
        <meta name="turbo-cache-control" content="no-cache"/>

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://dcsm-commerce.alwaysdata.net">
        <meta property="og:title" content="DCSM-COMMERCE - Plateforme d'investissement">
        <meta property="og:description" content="Plateforme d'investissement transparente avec suivi de performance en temps réel. Investissez dans l'immobilier, crypto-monnaies et marchés financiers avec un accompagnement personnalisé 7j/7, 24h/24.">
        <meta property="og:image" content="https://dcsm-commerce.alwaysdata.net/img/banner-og.jpg">
        <meta property="og:site_name" content="DCSM-COMMERCE">
        <meta property="fb:app_id" content="61554875637061">

        <title>
            {% block title %}{% endblock %}
            | DCSM-COMMERCE
        </title>

        <!-- Schema.org structured data -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Organization",
            "name": "DCSM-COMMERCE",
            "url": "https://dcsm-commerce.alwaysdata.net",
            "logo": "https://dcsm-commerce.alwaysdata.net/img/dcsm-logo.svg",
            "description": "Plateforme d'investissement leader en Afrique.",
            "sameAs": [
                "https://www.facebook.com/groups/3790076244599049",
                "https://www.facebook.com/profile.php?id=61554875637061",
                "https://twitter.com/votrecompte",
                "https://www.linkedin.com/company/votresociete"
            ]
        }
        </script>

        <link rel="shortcut icon" href="/img/dcsm-favicon.svg" type="image/x-icon"/>

        {% block stylesheets %}
            <!-- CDN for CSS and JS -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
            <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css"/>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet"/>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
            <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>

    <body data-bs-theme="dark">
        {% if app.current_route != 'app_main' and app.current_route != 'app_login' and app.current_route != 'app_register' %}
            {% include '_partials/_nav.html.twig' %}
        {% endif %}

        {% include '_partials/_flash.html.twig' %}

        {% block body %}{% endblock %}

        {# --- LOADER PERSONNALISÉ (SPINNER) --- #}
        <div id="custom-spinner" class="spinner hidden">
            <div class="spinner-circle"></div>
        </div>

        {% block customScript %}{% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            $(document).ready(function () {
                AOS.init();
            });
        </script>
        <script src="//code.tidio.co/1ke8d6pi5gzmnbfqlibfj63nxob1djzm.js" async></script>

        {# Désactivation de la barre de progression Turbo et gestion du spinner #}
        <script type="module">
            import { setProgressBarDelay } from '@hotwired/turbo';

            // On met un délai très élevé pour la barre de progression Turbo
            setProgressBarDelay(999999);

            // Affichage du spinner lors du début de la navigation
            document.addEventListener('turbo:visit', () => {
                const spinner = document.getElementById('custom-spinner');
                if (spinner) {
                    spinner.classList.remove('hidden');
                }
            });

            // Masquage du spinner lorsque la page est entièrement chargée
            document.addEventListener('turbo:load', () => {
                const spinner = document.getElementById('custom-spinner');
                if (spinner) {
                    spinner.classList.add('hidden');
                }
            });
        </script>

        <style>
            /* Styles pour le loader (spinner) */
            .spinner {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.3);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 9999;
            }
            .spinner.hidden {
                display: none;
            }
            .spinner-circle {
                width: 50px;
                height: 50px;
                border: 6px solid #eee;
                border-top-color: #6366f1; /* Couleur de la rotation */
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }
            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }
        </style>
    </body>
</html>