{# admin/user/index.html.twig #}
{% extends 'admin.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Utilisateurs</h5>
        <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
            <i class="mdi mdi-plus me-1"></i> Nouvel utilisateur
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Nom</th>
                        <th>Solde</th>
                        <th>Rôles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.fname }} {{ user.lname }}</td>
                        <td>{{ user.balance|format_currency('EUR') }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-label-primary">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <div class="d-flex">
                                <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info me-2">
                                    <i class="mdi mdi-eye"></i>
                                </a>
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning me-2">
                                    <i class="mdi mdi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm btn-danger" onclick="return confirmDelete(event)">
                                        <i class="mdi mdi-delete"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        $('.datatable').DataTable({
            responsive: true,
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/fr-FR.json'
            }
        });
    });
</script>
{% endblock %}