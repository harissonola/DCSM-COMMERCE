{# templates/bundles/TwigBundle/Exception/error403.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}403 - Accès interdit
{% endblock %}

{% block body %}
	<div class="py-5 mt-3">
		<div class="error-container" style="text-align: center; padding: 50px; background-color: #1e1e2e; color: #ff6b6b; font-family: Arial, sans-serif;">
			<img src="/images/403.webp" alt="403 Forbidden" width="300" style="max-width: 100%; border-radius: 10px;">
			<h1 style="font-size: 3em;">403 - Accès interdit</h1>
			<p style="font-size: 1.2em;">Vous n'avez pas la permission d'accéder à cette page.</p>
			<a href="{{path("app_main")}}" style="padding: 10px 20px; background: #ff6b6b; color: white; text-decoration: none; border-radius: 5px;">Retour à l'accueil</a>
		</div>
	</div>
{% endblock %}
