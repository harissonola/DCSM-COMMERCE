{% extends 'base.html.twig' %}

{% block title %}Sélection de cryptomonnaie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .crypto-card {
            transition: all 0.3s ease;
            border-radius: 10px;
            cursor: pointer;
        }
        .crypto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .crypto-card.selected {
            border: 2px solid #0d6efd;
            background-color: rgba(13, 110, 253, 0.05);
        }
        .crypto-icon {
            width: 40px;
            height: 40px;
            object-fit: contain;
        }
        .crypto-svg {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f8ff;
            border-radius: 50%;
            font-size: 14px;
            font-weight: bold;
            color: #0d6efd;
        }
        @media (max-width: 768px) {
            .crypto-card {
                padding: 15px;
            }
            .crypto-icon, .crypto-svg {
                width: 30px;
                height: 30px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4 py-lg-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-coins me-2"></i> Sélectionnez une cryptomonnaie</h4>
                        <span class="amount-badge bg-light text-primary">
                            {{ transaction.amount|number_format(2) }} USD
                        </span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="fas fa-info-circle me-3 fs-4"></i>
                        <div>
                            <h5 class="alert-heading mb-2">Dépôt crypto</h5>
                            <p class="mb-0">Sélectionnez votre cryptomonnaie et entrez votre adresse source pour continuer.</p>
                        </div>
                    </div>

                    <!-- Barre de recherche -->
                    <div class="mb-4 position-relative">
                        <input type="text" id="searchInput" class="form-control border-2" 
                               placeholder="Rechercher une cryptomonnaie..." autocomplete="off">
                        <i class="fas fa-search position-absolute end-0 top-50 translate-middle-y me-3 text-muted"></i>
                    </div>

                    <!-- Liste des cryptos avec CDN -->
                    <div class="row g-3 mb-4" id="cryptoGrid">
                        {% for key, name in supportedCryptos %}
                            {% set symbol = key|split('_')[0]|lower %}
                            {% set network = key|split('_')[1] ?? null %}
                            <div class="col-6 col-md-4 col-lg-3 crypto-item" data-crypto="{{ key }}" data-name="{{ name|lower }}">
                                <div class="crypto-card card h-100 p-3 text-center" onclick="selectCrypto('{{ key }}')">
                                    <div class="mb-2">
                                        <img src="https://cdn.jsdelivr.net/gh/spothq/cryptocurrency-icons@latest/128/color/{{ symbol }}.png"
                                             alt="{{ name }}" class="crypto-icon"
                                             onerror="this.onerror=null;this.outerHTML=`<div class='crypto-svg'>{{ symbol|upper }}</div>`;">
                                    </div>
                                    <h6 class="mb-1">{{ name|replace({'-': ' '}) }}</h6>
                                    {% if network %}
                                        <span class="badge bg-secondary">{{ network|upper }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Formulaire caché -->
                    <form method="post" action="{{ path('app_process_crypto_deposit', {'id': transaction.id}) }}" id="cryptoForm">
                        <input type="hidden" name="_token" value="{{ csrf_token('select_crypto') }}">
                        <input type="hidden" id="selectedCrypto" name="crypto_type" required>

                        <div class="mb-4">
                            <label for="source_address" class="form-label fw-bold">
                                <i class="fas fa-wallet me-2"></i>Votre adresse d'envoi
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-qrcode"></i></span>
                                <input type="text" class="form-control" id="source_address" name="source_address" 
                                       placeholder="0x..." required>
                                <button class="btn btn-outline-secondary" type="button" id="pasteBtn">
                                    <i class="fas fa-paste"></i>
                                </button>
                            </div>
                            <small class="text-muted">Adresse compatible avec la crypto sélectionnée</small>
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3" id="submitBtn" disabled>
                                <i class="fas fa-arrow-right me-2"></i> Confirmer le dépôt
                            </button>
                            <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i> Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sélection de crypto
            window.selectCrypto = function(cryptoKey) {
                document.querySelectorAll('.crypto-card').forEach(card => card.classList.remove('selected'));
                event.currentTarget.classList.add('selected');
                document.getElementById('selectedCrypto').value = cryptoKey;
                document.getElementById('submitBtn').disabled = false;
                const input = document.getElementById('source_address');
                if (cryptoKey.includes('trc20')) {
                    input.placeholder = 'T... (TRON address)';
                } else if (cryptoKey.includes('erc20')) {
                    input.placeholder = '0x... (Ethereum address)';
                } else {
                    input.placeholder = 'Entrez votre adresse';
                }
            };

            // Recherche en temps réel
            document.getElementById('searchInput').addEventListener('input', function() {
                const term = this.value.toLowerCase();
                document.querySelectorAll('.crypto-item').forEach(item => {
                    item.style.display = item.getAttribute('data-name').includes(term) ? 'block' : 'none';
                });
            });

            // Coller depuis le presse-papiers
            document.getElementById('pasteBtn').addEventListener('click', async () => {
                try {
                    const text = await navigator.clipboard.readText();
                    document.getElementById('source_address').value = text.trim();
                } catch {
                    alert('Impossible d\'accéder au presse-papiers');
                }
            });

            // Désactiver le bouton après soumission
            document.getElementById('cryptoForm').addEventListener('submit', function() {
                const btn = document.getElementById('submitBtn');
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Traitement en cours...';
            });
        });
    </script>
{% endblock %}