{% extends 'base.html.twig' %}

{% block title %}
	{{ app.user.fname }}
	{{ app.user.lname }}
	| Profil
{% endblock %}

{% block body %}
	<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet"/>
	<style>:root
	{
		--primary-color: #6366f1;
		--secondary-color: #f59e0b;
		--glass-bg: rgba(255, 255, 255, 0.1);
		--text-light: rgba(255, 255, 255, 0.9);
	}
	body {
		background: linear-gradient(135deg, #4f46e5, #9333ea);
		min-height: 100vh;
		color: var(--text-light);
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
	.profile-header {
		background: var(--glass-bg);
		backdrop-filter: blur(20px);
		border-radius: 1.5rem;
		padding: 2rem;
		margin: 2rem auto;
		max-width: 1200px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}
	.profile-avatar {
		width: 120px;
		height: 120px;
		object-fit: cover;
		border-radius: 50%;
		border: 3px solid #fff;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
	}
	.action-grid {
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
	}
	.action-btn {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1.5rem;
		background: var(--glass-bg);
		border-radius: 1rem;
		transition: all 0.3s ease;
		text-align: center;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}
	.action-btn:hover {
		transform: translateY(-2px);
		background: rgba(255, 255, 255, 0.2);
	}
	.stats-card {
		background: var(--glass-bg);
		padding: 1.5rem;
		border-radius: 1rem;
		backdrop-filter: blur(10px);
		min-width: 200px;
	}
	.transaction-card {
		background: var(--glass-bg);
		border-radius: 1rem;
		overflow: hidden;
	}
	.modal-content {
		background: var(--glass-bg);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		color: var(--text-light);
	}
	@media(max-width: 768px) {
		.profile-header {
			margin: 1rem;
			padding: 1.5rem;
		}
		.profile-avatar {
			width: 80px;
			height: 80px;
		}
		.stats-card {
			width: 100%;
			margin-top: 1rem;
		}
	}

	/* Personnalisation du Select2 */
	.select2-container--default .select2-selection--single {
		height: calc(2.5rem + 2px);
		border: 1px solid #ced4da;
		border-radius: 0.375rem;
		padding: 0.375rem 0.75rem;
		background: #fff;
	}
	.select2-container--default .select2-selection--single .select2-selection__rendered {
		line-height: 2.5rem;
		color: #495057;
	}
	.select2-dropdown {
		background-color: rgb(9, 68, 92);
		color: #fff;
	}
	.select2-results__option {
		color: #fff;
	}
	.select2-results__option--highlighted {
		background-color: #ff7f50 !important;
		color: #fff !important;
	}
</style>

<!-- Section Profil -->
<div class="profile-header">
	<div class="d-flex flex-column flex-md-row align-items-center gap-4">
		<div class="position-relative">
			{% if app.user.googleId and app.user.photo starts with 'http' %}
				<img src="{{ app.user.photo }}" class="profile-avatar"/>
			{% else %}
				<img src="{{ app.user.photo }}" class="profile-avatar"/>
			{% endif %}
		</div>
		<div class="flex-grow-1 text-center text-md-start">
			<h1 class="h3 mb-1">{{ app.user.fname }}
				{{ app.user.lname }}</h1>
			<div class="d-flex flex-wrap gap-2 justify-content-center justify-content-md-start">
				<span class="badge bg-primary rounded-pill">@{{ app.user.username }}</span>
				<span class="badge bg-success rounded-pill">{{ app.user.country|country_name('fr') }}</span>
			</div>
			<a href="{{ path("app_logout") }}" class="btn btn-danger btn-sm mt-2">
				<i class="fas fa-sign-out-alt"></i>
