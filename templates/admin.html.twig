<!DOCTYPE html>
<html lang="fr" class="layout-menu-fixed" dir="ltr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Admin Panel
			{% endblock %}
		</title>

		<!-- Favicon -->
		<link rel="shortcut icon" href="https://raw.githubusercontent.com/harissonola/my-cdn/main/img/dcsm-favicon.svg" type="image/x-icon"/>

		<!-- CDN Sneat -->
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com"> <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

		<!-- Core CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/css/core.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/css/theme-default.css">
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/css/demo.css">

		<!-- Vendor CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css">
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/libs/apex-charts/apex-charts.css">

		<!-- SweetAlert2 CSS -->
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

		<!-- Page-specific CSS -->
		{% block stylesheets %}{% endblock %}

		<!-- Icons -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@6.9.96/css/materialdesignicons.min.css">

		<style>:root
		{
			--bs-body-bg: #2b2c40;
			--bs-body-color: #a3a4cc;
			--bs-dark: #283144;
			--bs-light: #3a3b5a;
		}
		body {
			background-color: var(--bs-body-bg);
			color: var(--bs-body-color);
		}
		.card,
		.modal-content,
		.dropdown-menu {
			background-color: var(--bs-dark);
			border-color: rgba(255, 255, 255, 0.1);
		}
		.table {
			--bs-table-bg: transparent;
			--bs-table-color: var(--bs-body-color);
			--bs-table-border-color: rgba(255, 255, 255, 0.1);
		}
		/* Style personnalisé pour SweetAlert2 */
		.swal2-popup {
			background-color: var(--bs-dark) !important;
			color: var(--bs-body-color) !important;
			border: 1px solid rgba(255, 255, 255, 0.1) !important;
		}
		.swal2-title,
		.swal2-content {
			color: var(--bs-body-color) !important;
		}
		.swal2-icon.swal2-success .swal2-success-ring {
			border-color: rgba(105, 108, 255, 0.3) !important;
		}
		.swal2-icon.swal2-success [class^=swal2-success-line] {
			background-color: #696cff !important;
		}
		.swal2-icon.swal2-error {
			border-color: #ff3e1d !important;
		}
		.swal2-icon.swal2-error [class^=swal2-x-mark-line] {
			background-color: #ff3e1d !important;
		}
	</style>

	{% block javascripts %}
		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	{% endblock %}
</head>

<body>
	{# --- LOADER PERSONNALISÉ (SPINNER) --- #}
	<div id="custom-spinner" class="spinner hidden">
		<div class="spinner-circle"></div>
	</div>

	<!-- Layout wrapper -->
	<div class="layout-wrapper layout-content-navbar">
		<div
			class="layout-container">
			<!-- Menu -->
			{% include 'admin/_menu.html.twig' %}

			<!-- Layout container -->
			<div
				class="layout-page">
				<!-- Navbar -->
				{% include 'admin/_navbar.html.twig' %}

				<!-- Content wrapper -->
				<div
					class="content-wrapper">
					<!-- Content -->
					<div class="container-xxl flex-grow-1 container-p-y"> {% block body %}{% endblock %}
						</div>
						<!-- / Content -->

						<!-- Footer -->
						{% include 'admin/_footer.html.twig' %}
					</div>
					<!-- / Content wrapper -->
				</div>
				<!-- / Layout page -->
			</div>
		</div>
		<!-- / Layout wrapper -->

		<!-- Scripts critiques : On empêche leur réévaluation via Turbo grâce à data-turbo-eval="false" -->
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/js/helpers.js"></script>
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/js/menu.js"></script>
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/js/config.js"></script>

			<!-- Scripts des librairies tierces  -->
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/vendor/libs/apex-charts/apexcharts.js"></script>

			<!-- Script principal : On peut permettre sa réévaluation si nécessaire ou appliquer une initialisation unique -->
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/gh/themeselection/sneat-html-admin-template-free@main/assets/js/main.js"></script>

			<!-- SweetAlert2 -->
			 <script data-turbo-eval="false" src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

			<!-- Flash Messages Handler et confirmations -->
			 <script>
			        // Configuration globale pour les toasts (exécuté une seule fois au chargement Turbo)
			        document.addEventListener('turbo:load', function initFlashAndDelete() {
			          // Affichage des flash messages
			          const Toast = Swal.mixin({
			              toast: true,
			              position: 'top-end',
			              showConfirmButton: false,
			              timer: 5000,
			              timerProgressBar: true,
			              background: 'var(--bs-dark)',
			              color: 'var(--bs-body-color)',
			              didOpen: (toast) => {
			                  toast.addEventListener('mouseenter', Swal.stopTimer);
			                  toast.addEventListener('mouseleave', Swal.resumeTimer);
			              }
			          });
			
			          // Afficher les messages flash (ce bloc est généré côté serveur)
			          {% for type, messages in app.flashes %}
			            {% for message in messages %}
			              Toast.fire({
			                icon: '{{ type }}',
			                title: '{{ message|raw }}'
			              });
			            {% endfor %}
			          {% endfor %}
			
			          // Gestion de la confirmation de suppression pour les formulaires
			          document.querySelectorAll('[data-confirm="delete"]').forEach(elem => {
			            elem.addEventListener('click', function(event) {
			              event.preventDefault();
			              const form = event.target.closest('form');
			              Swal.fire({
			                title: 'Êtes-vous sûr ?',
			                text: "Cette action est irréversible !",
			                icon: 'warning',
			                showCancelButton: true,
			                confirmButtonText: 'Oui, supprimer',
			                cancelButtonText: 'Annuler',
			                customClass: {
			                  confirmButton: 'btn btn-primary me-3',
			                  cancelButton: 'btn btn-label-secondary'
			                },
			                buttonsStyling: false
			              }).then((result) => {
			                if (result.isConfirmed) {
			                  form.submit();
			                }
			              });
			            });
			          });
			        });
			      </script>

		{% block javascripts_end %}{% endblock %}
	</body>
</html>