{% extends 'admin.html.twig' %}

{% block title %}Détails Boutique - {{ shop.name }}{% endblock %}

{% block body %}
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Détails de la boutique</h5>
        <div>
            <a href="{{ path('admin_shop_edit', {'id': shop.id}) }}" class="btn btn-warning me-2">
                <i class="mdi mdi-pencil"></i> Modifier
            </a>
            <a href="{{ path('admin_shop_index') }}" class="btn btn-label-secondary">
                <i class="mdi mdi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tr>
                        <th>ID</th>
                        <td>{{ shop.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ shop.name }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ shop.slug }}</td>
                    </tr>
                    <tr>
                        <th>Produits</th>
                        <td>{{ shop.products|length }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                {% if shop.image %}
                    <img src="{{ shop.image }}" alt="{{ shop.name }}" class="img-fluid rounded mb-3">
                {% endif %}
                <h6>Description</h6>
                <p>{{ shop.description ?? 'Aucune description' }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}