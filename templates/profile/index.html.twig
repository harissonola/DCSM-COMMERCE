				<circle cx="18" cy="5" r="3"></circle>
				<circle cx="6" cy="12" r="3"></circle>
				<circle cx="18" cy="19" r="3"></circle>
				<line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
				<line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
			</svg>
			Parrainage
		</button>
	</div>
</div>

<!-- Referral Section -->
<div class="profile-header">
	{% set referrals = referralCount|default(0) %}
	{% if referrals < 5 %}
		{% set required = 5 %}
		{% set reward = 6 %}
		{% set level = 1 %}
	{% elseif referrals < 10 %}
		{% set required = 10 %}
		{% set reward = 7 %}
		{% set level = 2 %}
	{% elseif referrals < 20 %}
		{% set required = 20 %}
		{% set reward = 10 %}
		{% set level = 3 %}
	{% else %}
		{% set required = 40 %}
		{% set reward = 13 %}
		{% set level = 4 %}
	{% endif %}
	{% set progress = referrals / required * 100 %}
	{% if progress > 100 %}
		{% set progress = 100 %}
	{% endif %}
	<div class="mb-4">
		<h4>Niveau
			{{ level }}
			-
			{{ referrals }}
			sur
			{{ required }}
			personnes parrainées</h4>
		<div class="progress" style="height: 1rem;">
			<div class="progress-bar progress-bar-striped" role="progressbar" style="width: {{ progress|round(0, 'ceil') }}%;" aria-valuenow="{{ progress|round(0, 'ceil') }}" aria-valuemin="0" aria-valuemax="100">
				{{ progress|round(0, 'ceil') }}%
			</div>
		</div>
		<p class="mt-2">
			Récompense à l'atteinte de ce niveau :
			{{ reward }}%
			{% if level == 4 and referrals >= 40 %}
				+ 10$ crédité sur votre compte.
			{% endif %}
		</p>
	</div>
</div>

<!-- Products Section -->
<div class="profile-header">
	<h5 class="mb-3">Vos Produits</h5>
	<div class="row">
		{% if app.user.product|length > 0 %}
			{% for product in app.user.product %}
				<div class="col-md-4 mb-3">
					<div class="card h-100">
						<div class="card-body">
							<h5 class="card-title">{{ product.name }}</h5>
							<p class="card-text">{{ product.description|slice(0, 100) }}
								{% if product.description|length > 100 %}...
								{% endif %}
							</p>
							<div class="d-flex justify-content-between align-items-center">
								<span class="badge bg-success">${{ (product.price / 601.51)|number_format(2) }}</span>
								<div class="d-flex">
									<a href="{{ path('app_products_dashboard', {'slug': product.slug}) }}" class="btn btn-primary btn-sm me-2">
										<i class="fas fa-eye"></i>
										Voir
									</a>
									<form method="post" action="{{ path('app_user_remove_product', {'id': product.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir retirer ce produit ? Vous serez remboursé de ${{ (product.price / 601.51)|number_format(2) }}');">
										<input type="hidden" name="_token" value="{{ csrf_token('delete-product-' ~ product.id) }}">
										<button type="submit" class="btn btn-danger btn-sm">
											<i class="fas fa-trash-alt"></i>
											Supprimer
										</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		{% else %}
			<div class="col-12 text-center py-4">
				<div class="text-muted">Vous n'avez pas encore de produits</div>
				<a href="{{ path('app_products_index') }}" class="btn btn-primary mt-3">
					<i class="fas fa-shopping-cart"></i>
					Découvrir les produits
				</a>
			</div>
		{% endif %}
	</div>
</div>

<!-- Transactions Section -->
<div class="profile-header">
	<h5 class="mb-3">Historique des transactions</h5>
	<div class="transaction-card">
		<div class="table-responsive">
			<table class="table table-dark table-hover align-middle mb-0">
				<thead>
					<tr>
						<th>Date</th>
						<th>Type</th>
						<th>Méthode</th>
						<th>Montant</th>
						<th>Statut</th>
					</tr>
				</thead>
				<tbody>
					{% for transaction in transactions %}
						<tr>
							<td>{{ transaction.createdAt|date('d/m/Y H:i') }}</td>
							<td>
								{% if transaction.type == 'withdrawal' %}
									<span class="badge bg-danger">Retrait</span>
								{% else %}
									<span class="badge bg-success">Dépôt</span>
								{% endif %}
							</td>
							<td>{{ transaction.method }}</td>
							<td>
								{% if transaction.type == 'withdrawal' %}
									<span class="text-danger">-{{ transaction.amount|number_format(2) }}</span>
								{% else %}
									<span class="text-success">+{{ transaction.amount|number_format(2) }}</span>
								{% endif %}
							</td>
							<td>
								<span class="badge rounded-pill bg-{{ transaction.status == 'pending' ? 'warning' : transaction.status == 'failed' ? 'danger' : 'success' }}">
									{{ transaction.status == 'pending' ? 'En attente' : transaction.status == 'failed' ? 'Échoué' : 'Réussi' }}
								</span>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5" class="text-center py-4">
								<div class="text-muted">Aucune transaction récente</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- Deposit Modal -->
<div class="modal fade" id="depositModal" tabindex="-1" aria-labelledby="depositModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="depositModalLabel">💳 Déposer des fonds</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="depositForm" action="{{ path('app_deposit') }}" method="post">
					<input type="hidden" name="_token" value="{{ csrf_token('deposit') }}">
					<div class="mb-3">
						<label class="form-label">Montant (USD)</label>
						<div class="input-group">
							<span class="input-group-text">$</span>
							<input type="number" name="amount" class="form-control bg-transparent text-light" required step="0.01" min="{{ constant('App\\Controller\\PaymentController::MIN_DEPOSIT_AMOUNT') }}" max="{{ constant('App\\Controller\\PaymentController::MAX_DEPOSIT_AMOUNT') }}"/>
						</div>
						<small class="text-muted">Min: ${{ constant('App\\Controller\\PaymentController::MIN_DEPOSIT_AMOUNT') }}
							- Max: ${{ constant('App\\Controller\\PaymentController::MAX_DEPOSIT_AMOUNT') }}</small>
					</div>
					<div class="mb-4">
						<label class="form-label">Méthode de paiement</label>
						<div class="d-grid gap-2">
							{% set paymentMethods = [
                                    { id: 'crypto', label: 'Crypto', icon: 'currency-btc' },
                                    { id: 'paypal', label: 'PayPal', icon: 'paypal' }
                                ] %}
							{% for method in paymentMethods %}
								<div class="form-check payment-method">
									<input class="form-check-input" type="radio" name="method" id="{{ method.id }}" value="{{ method.id }}" required/>
									<label class="form-check-label d-flex align-items-center" for="{{ method.id }}">
										{% if method.icon == 'currency-btc' %}
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
												<path d="M6 6h8a3 3 0 0 1 0 6 3 3 0 0 1 0 6H6"/>
												<path d="M8 6L8 18"/>
												<path d="M8 12L14 12"/>
												<path d="M9 3v3"/>
												<path d="M13 3v3"/>
												<path d="M9 18v3"/>
												<path d="M13 18v3"/>
											</svg>
										{% else %}
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
												<path d="M14 9h6"/>
												<path d="M15 21c1.1 0 2-1 2-1s.4-3.7 2-6"/>
												<path d="M19.5 12.9c1.7.4 3.3 1.4 4 3.1 1.4 3-1.1 6.1-4.6 6-2.3-.1-3.9-2-3.9-2"/>
												<path d="M9 10H4v7h6c2.5 0 2.5.5 4 1"/>
												<path d="M15 9c-.8.8-3 1.9-5 1.9H8.1L6 15.1H9"/>
											</svg>
										{% endif %}
										{{ method.label }}
									</label>
								</div>
							{% endfor %}
						</div>
					</div>
					<button type="submit" class="btn btn-primary w-100 py-2">Continuer</button>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Withdraw Modal -->
<div class="modal fade" id="withdrawModal" tabindex="-1">
	<div class="modal-dialog modal-dialog-centered">
		<form action="{{ path('app_withdraw') }}" method="post" class="modal-content">
			<input type="hidden" name="_token" value="{{ csrf_token('withdraw') }}">
			<div class="modal-header">
				<h5 class="modal-title">📤 Retirer des fonds</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<div class="mb-3">
					<label class="form-label">Montant (USD)</label>
					<div class="input-group">
						<span class="input-group-text">$</span>
						<input type="number" name="amount" class="form-control bg-transparent text-light" step="0.01" required min="{{ constant('App\\Controller\\PaymentController::MIN_WITHDRAWAL_AMOUNT') }}" max="{{ constant('App\\Controller\\PaymentController::MAX_WITHDRAWAL_AMOUNT') }}"/>
					</div>
					<small class="text-muted">Min: ${{ constant('App\\Controller\\PaymentController::MIN_WITHDRAWAL_AMOUNT') }}
						- Max: ${{ constant('App\\Controller\\PaymentController::MAX_WITHDRAWAL_AMOUNT') }}</small>
				</div>
				<div class="mb-3">
					<label>Type de crypto</label>
					<select id="cryptoType" name="currency" class="form-select bg-transparent text-light" required>
						<option value="">Sélectionnez une crypto</option>
						{% for key, label in constant('App\\Controller\\PaymentController::SUPPORTED_CRYPTOS') %}
							<option value="{{ key }}">{{ label }}</option>
						{% endfor %}
					</select>
				</div>
				<div class="mb-3">
