    {% block stylesheets %}
        <!-- CDN for CSS and JS -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css">
        
        <!-- Sneat CSS -->
        <link rel="stylesheet" href="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/fonts/boxicons.css"/>
        <link rel="stylesheet" href="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/css/core.css" class="template-customizer-core-css"/>
        <link rel="stylesheet" href="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/css/theme-default.css" class="template-customizer-theme-css"/>
        <link rel="stylesheet" href="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/css/demo.css"/>
        
        <!-- AOS Animation -->
        <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet"/>
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>

<body class="dark-style layout-navbar-fixed layout-menu-fixed">
    {% if app.current_route != 'app_login' and app.current_route != 'app_register' %}
        {% include '_partials/_nav.html.twig' %}
    {% endif %}

    {% include '_partials/_flash.html.twig' %}

    {% block body %}{% endblock %}

    <!-- LOADER PERSONNALISÉ (SPINNER) -->
    <div id="custom-spinner" class="spinner hidden">
        <div class="spinner-circle"></div>
    </div>

    {% block customScript %}{% endblock %}

    <!-- Sneat JS -->
    <script src="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/libs/popper/popper.js"></script>
    <script src="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/js/bootstrap.js"></script>
    <script src="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/vendor/js/menu.js"></script>
    <script src="https://raw.githubusercontent.com/harissonola/my-cdn/main/sneat/assets/js/main.js"></script>
    
    <!-- AOS Animation -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    
    <!-- Tidio Chat -->
    <script src="//code.tidio.co/1ke8d6pi5gzmnbfqlibfj63nxob1djzm.js" async></script>

    <script>
        $(document).ready(function () {
            AOS.init();
            
            // Initialisation du menu Sneat
            if (typeof window.TemplateCustomizer !== 'undefined') {
                window.TemplateCustomizer.init();
            }
        });

        // Gestion du spinner avec Turbo
        document.addEventListener('turbo:visit', () => {
            const spinner = document.getElementById('custom-spinner');
            if (spinner) {
                spinner.classList.remove('hidden');
            }
        });

        document.addEventListener('turbo:load', () => {
            const spinner = document.getElementById('custom-spinner');
            if (spinner) {
                spinner.classList.add('hidden');
            }
        });
    </script>

    <style>
        /* Styles pour le loader (spinner) */
        .spinner {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }
        .spinner.hidden {
            display: none;
        }
        .spinner-circle {
            width: 50px;
            height: 50px;
            border: 6px solid #5f61e6;
            border-top-color: #7367f0;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
        
        /* Assurer que le body est toujours en dark mode */
        body {
            color-scheme: dark;
            background-color: #2b2c40;
            color: #a3a4cc;
        }
    </style>
</body>
</html>